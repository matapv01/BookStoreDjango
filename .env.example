# Django Settings 
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
# SQLite (default)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (optional)
# DATABASE_URL=postgres://user:password@localhost:5432/bookstore

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Error Logging
LOG_LEVEL=INFO
ERROR_COLLECTION_ENABLED=True
ERROR_SAMPLE_RATE=100
ERROR_RATE_LIMIT_ENABLED=True
ERROR_CONTEXT_MAX_LENGTH=10000

# Error Notifications
ERROR_NOTIFY_EMAIL=admin@example.com
ERROR_NOTIFY_SLACK_WEBHOOK=your-slack-webhook-url
ERROR_NOTIFY_TEAMS_WEBHOOK=your-teams-webhook-url

# Cache Settings (optional)
CACHE_URL=redis://127.0.0.1:6379/1

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Payment Integration (example)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# AWS S3 Storage (optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=your-region

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# Development Settings
DJANGO_ALLOWED_CIDR=127.0.0.1/32
INTERNAL_IPS=127.0.0.1
DEBUG_TOOLBAR_ENABLED=True

# Documentation
GENERATE_DOCS=False
DOCS_LANGUAGE=en